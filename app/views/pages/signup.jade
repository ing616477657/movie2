extends ../layout

block content
	.container
			.row
				.col-md-5
					form(method='POST',action='/user/signupajax')
						.modal-body
							.form-group
								label(for='signupName') 用户名
								span(class='nameMsg')
								input#signupName.form-control.signinName(name='user[name]',type='text')
							.form-group
								label(for='signupPassword') 密码
								span(class='passMsg')
								input#signupPassword.form-control.signinPassword(name='user[password]',type='text')
						.modal-footer
							button.btn.btn-success.sinup(type='button') 提交
	script(src='/js/user.js')